<link rel="stylesheet" href="style.css">

{{#partial "content"}}
    <div class="row">
        <div class="news">
            <form method="post" action="/newcompanynews" class="emp">
                <div class="form-group"> <!-- Email field !-->
                    <label for="companynews" class="control-label">General Company News</label>
                    <textarea class="form-control" id="companynews" name="news" placeholder="Enter Company News"></textarea>
                </div>
                <div class="form-group"> <!-- Submit button !-->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <div class="col">
                <a href="/viewcompanyjson"><button class="btn-primary btn-lg">See General News(JSON format)</button></a>
                <a href="/showcompanynews"><button class="btn-primary btn-lg">View General News</button></a>
                <a href="/companydetails"><button class="btn-primary btn-lg">View Company</button></a>

            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs}}
